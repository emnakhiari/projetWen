                                <div class="card-header">
                                    <div class="spur-card-icon">
                                        <i class="fas fa-file"></i>
                                    </div>
                                    <div class="spur-card-title"> Ajouter une facture</div>
                                </div>
                                <div class="card">
           
                <div class="card-body">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
