{% extends 'baseBack.html.twig' %}

{% block title %}Hello FactureController!{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <style>
    .ligne-table:hover {
      font-weight: bold;
    }
   .ligne-table input[type="checkbox"] {
    display: none;
  }

  .ligne-table input[type="checkbox"]:checked + td {
    background-color: red;
    color: white;
  }
  </style>
{% endblock %}

