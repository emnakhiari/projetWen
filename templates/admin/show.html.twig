{% extends 'baseBack.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class='container-fluid'>
        <div class="card mx-auto col-md-8 col-10 mt-5">
            <div class="card-header">
                    <h3 class="card-title">
                        Produits
                    </h3>
                </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.idproduit }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/uploads/{{produit.image}}"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/_delete_form.html.twig') }}
    
    <a href="{{ path('app_admin_index') }}">back to list</a>



{% endblock %}
